<section  ng-controller="DriversController" ng-init="refresh();">
  <div class="row">
    <div class="col-sm-12">
      <div class="row">
        <div class="col-sm-6 col-sm-offset-6">
          <input type="button" class="btn btn-primary pull-right" name="refresh" value="Refresh" ng-click="refresh();">
        </div>
      </div>
      <div class="row">
        <div class="col-sm-4"><h3 class="text-center">Waiting</h3></div>
        <div class="col-sm-4"><h3 class="text-center">Ongoing</h3></div>
        <div class="col-sm-4"><h3 class="text-center">Complete</h3></div>
      </div>
      <div class="row">
        <div class="col-sm-4 waiting">
          <div class="row" ng-repeat="wt in requests.waiting">
            <address>
              <strong>Req ID: {{wt.request_id}}</strong><strong>Cust Id: {{wt.customer_id}}</strong><br>
              {{timely(wt.request_at)}}<br>
              <small><input type="button" name="accept" value="Select" ng-click="letsRide(wt);" class="btn btn-primary"></small>
            </address>
          </div>
        </div>
        <div class="col-sm-4 ongoing">
          <div class="row" ng-repeat="og in requests.ongoing">
            <address>
              <strong>Req ID: {{og.request_id}}</strong><strong>Cust Id: {{og.customer_id}}</strong><br>
              Req At: {{timely(og.request_at)}}<br>
              <small>Picked At: {{timely(og.pickedup_at)}}</small><br/>
              <small>Driver: {{og.driver.driver}}</small>
            </address>
          </div>
        </div>
        <div class="col-sm-4 complete">
          <div class="row" ng-repeat="cp in requests.complete">
            <address>
              <strong>Req ID: {{cp.request_id}}</strong><strong>Cust Id: {{cp.customer_id}}</strong><br>
              Req At: {{timely(cp.request_at)}}<br>
              <samll>Picked At: {{timely(cp.pickedup_at)}}</samll><br/>
              <small>Comp At: {{timely(cp.completed_at)}}</small><br/>
              <small>Driver: {{cp.driver.driver}}</small>
            </address>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>